{
  "name": "link-previews",
  "version": "0.1.0",
  "description": "A React component than renders beautiful, fully-customizable link previews.",
  "keywords": [
    "react",
    "component",
    "link",
    "previews"
  ],
  "homepage": "https://github.com/Hossein-i/link-previews#readme-ov-file",
  "bugs": {
    "url": "https://github.com/Hossein-i/link-previews/issues",
    "email": "sayhi@hossein-i.ir"
  },
  "license": "MIT",
  "author": {
    "name": "Hossein-i",
    "email": "sayhi@hossein-i.ir",
    "url": "https://hossein-i.ir"
  },
  "funding": [
    {
      "type": "Zarinpal",
      "url": "https://zarinp.al/668251"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hossein-i/link-previews.git"
  },
  "type": "commonjs",
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "sideEffects": [
    "./dist/index.js",
    "./dist/cjs/index.js"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "build": "concurrently \"npm run build:types\"",
    "build:types": "concurrently 'npm run tsc:*'",
    "tsc:es6": "cross-env NODE_ENV=production tsc --emitDeclarationOnly --declaration -p tsconfig.dist.json && tsc-alias",
    "tsc:cjs": "cross-env NODE_ENV=production tsc --emitDeclarationOnly --declaration --outDir dist/cjs/ -p tsconfig.dist.json && tsc-alias",
    "ncu": "ncu -i --format group",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky",
    "commit": "cz"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/eslint": "^8",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^22.10.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "cz-emoji-conventional": "^1.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.1",
    "npm-check-updates": "^17.1.14",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.3",
    "typescript-eslint": "^7.0.0"
  },
  "resolutions": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji-conventional"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
